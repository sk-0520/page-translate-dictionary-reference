root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 4

[*.bat]
end_of_line = crlf
charset = shift-jis

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.xml]
indent_style = tab
indent_size = 4

[*.{json,jsonc}]
indent_style = tab
indent_size = 4

[*.{ts,js}]
indent_style = tab
indent_size = 4

[*.{scss,css}]
indent_style = tab
indent_size = 4
